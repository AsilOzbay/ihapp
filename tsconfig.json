{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,                // JS dosyalarına izin ver
    "noImplicitAny": false,         // "any" tipi için hata verme
    "checkJs": false,               // JS dosyalarını kontrol etme
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",                      // JS dosyalarını dahil et
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

